{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "noImplicitAny": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false,
    "skipLibCheck": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "src",
    "lib"
  ]
}
